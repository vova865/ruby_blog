<% provide :page_title, "Articles" %>

<div class="container">
    <h1>Articles</h1>

    <ul>
      <% @articles.each do |article| %>
        <li>
          <%= link_to article.title, article %>
        </li>
        <p>
          <%= truncate(article.body, length: 250) { link_to "continued", article }%>
        <p>Published at:
          <%= article.formatted_created_at %>
        </p>
        </p><hr>
      <% end %>
    </ul>

    <%== pagy_bootstrap_nav(@pagy) %>
</div>
