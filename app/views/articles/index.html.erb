<% provide :page_title, "Все статьи" %>

<h1>Все статьи</h1>

<ul>
  <% @articles.each do |article| %>
    <li>
      <%= link_to article.title, article %>
    </li>
    <p>
      <%= truncate(article.body, length: 250) { link_to "Продолжение", article }%>
    <p>Опубликовано:
      <%= article.formatted_created_at %>
    </p>
    </p><hr>
  <% end %>
</ul>

