<% provide :page_title, "Article about #{@article.title}" %>

<div class="container">
  <h1><%= @article.title %></h1>

  <p><%= sanitize @article.body %></p>

  <p>Published at: <%= @article.formatted_created_at %></p>

  <p>
    <% if @article.image %>
      <strong>Image data:</strong>
      <%= image_tag @article.image_url %>
    <% end %>
  </p>

  <p><%= pluralize(@article.views, 'view') %></p>

  <p><%= t('activerecord.models.category') %>: <%= @article.category.name %></p>

  <p><%= t('activerecord.models.user') %>: <%= link_to @article.user.name, user_path(@article.user) %></p>

  <%= link_to t('navbar.articles'),  articles_path, class: "btn btn-dark" %>
  <%= link_to "Edit article", edit_article_path, class: "btn btn-dark" %>
  <%= link_to "Delete", article_path, class: "btn btn-dark", data: {
      turbo_method: :delete,
      turbo_confirm: "Are you sure?"
  } %>

  <p><h2>Comment</h2></p>
  <%= render @article.comments %>

  <h2>Add comment:</h2>
  <%= render 'comments/form' %>
</div>