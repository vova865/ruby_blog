<h1 class="text-center"><%= pluralize(@articles.count, "Result") %></h1>
<div class="container">
  <table class="table table-dark table-striped">
    <thead>
      <tr>
        <th><%= sort_link(@query, :title, "Title", default_order: :asc) %></th>
        <th><%= sort_link(@query, :body, "Blog Content") %></th>
        <th><%= sort_link(@query, :user_name, "Users") %></th>
      </tr>
    </thead>
    <tbody>
      <% @articles.each do |article| %>
        <tr>
          <td><%= link_to article.title, article %></td>
          <td><%= article.body.truncate_words(25) %></td>
          <td><%= link_to article.user.name, article.user %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>