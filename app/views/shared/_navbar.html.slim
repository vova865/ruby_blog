nav.navbar.navbar-expand-lg.navbar-light.bg-light
  .container-fluid
    a.navbar-brand[href="/"]
      | MyBlog
    button.navbar-toggler[type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation"]
      span.navbar-toggler-icon
    #navbarSupportedContent.collapse.navbar-collapse
      ul.navbar-nav.me-auto.mb-2.mb-lg-0
        li
          = link_to t('navbar.articles'), articles_path, class: "nav-link active"
        li
          = link_to t('navbar.new article'), new_article_path, class: "nav-link active"
        - if current_user
          li.nav-item.dropdown
            a#navbarDropdown.nav-link.dropdown-toggle[href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false"]
              = current_user.name
            ul.dropdown-menu[aria-labelledby="navbarDropdown"]
              li
                = link_to t('navbar.edit'), edit_user_registration_path, class: "dropdown-item"
              li
                hr.dropdown-divider
              - if current_user.admin?
                li
                  = link_to t('navbar.admin'), admin_root_path  , class: "dropdown-item"
                li
                  hr.dropdown-divider
              li
                = link_to t('navbar.log out'),  destroy_user_session_path, 'data-turbo-method': :delete, class: "dropdown-item"
        - else
          li.nav-item.dropdown
            a#navbarDropdown.nav-link.dropdown-toggle[href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false"]
              = t('navbar.account')
            ul.dropdown-menu[aria-labelledby="navbarDropdown"]
              li
                = link_to t('navbar.log in'),  new_user_session_path, class: "dropdown-item"
              li
                hr.dropdown-divider
              li
                = link_to t('navbar.sign up'), new_user_registration_path, class: "dropdown-item"
        li.nav-item
          a.nav-link[href="#" tabindex="-1" aria-disabled="true"]
            = t('navbar.about')
      = render 'search/form'
