<div class="container">
  <h1>Articles about <%= @category.name.downcase %></h1>

  <% @category.articles.each do |article| %>
    <h5>
      <%= link_to article.title, article %>
    </h5>

    <p>
      <%= article.body %>
    </p>

    <p>Published at:
      <%= article.formatted_created_at %>
    </p>
  <% end %>

  <%#== pagy_bootstrap_nav(@pagy) %>
</div>