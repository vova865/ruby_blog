<div class="container">
  <h1><%= t('categories.show.title') %> <%= @category.name.downcase %></h1>

  <% @category.articles.each do |article| %>
    <h5>
      <%= link_to article.title, article %>
    </h5>

    <p>
      <%= article.body %>
    </p>

    <p><%= t('categories.show.publish') %>:
      <%= article.formatted_created_at %>
    </p>
  <% end %>

  <%#== pagy_bootstrap_nav(@pagy) %>
</div>